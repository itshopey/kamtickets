<%- include('partials/dashheader') %>

        <div class="centralize w-50 mt-4">
            <div>
        <% if(message != '') { %>
            <div class="alert alert-secondary" role="alert">
        <%= message %>
        </div>
        <% } %>
        </div>
            <div>
                <div class="">
                    <div class="card-header">
                        <p><%=ticket.subject%> from <%=ticket.fullname%> - <%= ticket.status %> </p>
                        <div>
                            <p>Date Created:</p> <%= ticket.date_created%>
                        </div>
                        <div>
                            <p>Assigned To:</p><% if(ticket.state == "UNASSIGNED") { %>
                                <p>Not Yet Assigned</p>
                                <% } %>
                                <%=ticket.staffname%>
                        </div>
                        <% if(ticket.date_closed != null) { %>
                        <div>
                            <p>Date Closed:</p> <%= ticket.date_closed%>
                            <p>Closed By:</p> <%= ticket.closed_by%>
                        </div>
                        <% } %>
                        <% if(ticket.status != "CLOSED") { %>
                        <a href="/closeticket/<%=ticket._id%>" class="btn btn-sm btn-outline-primary">Close Ticket</a>
                        <% } %>
                    </div>
                    <div class="card-body" align="center">
                        <p>Staff Contact Details</p>
                        <hr>
                        <p>Staff Email: <%= ticket.email %></p>
                        <p>Staff Phone: <%= ticket.phone %></p>
                        <p>Staff SBU: <%= ticket.sbu.toUpperCase() %></p>
                        <p>Staff Department: <%= ticket.department.toUpperCase() %></p>
                        <hr>
                        <p>Ticket Detail</p>
                        <hr>
                        <p>Ticket Category: <%= ticket.category %></p>
                        <p>Description Of Complaint: <%= ticket.description %></p>
                        <p>Attachments:
                        <a target="_blank" href="/<%= ticket.attachment %>">
                        <img src="/<%= ticket.attachment %>" alt="attachment">
                        <div class="space"></div>
                        </a>
                        <div class="comments">
                            <div class="comments-header bg-secondary text-white">
                                <h5>Comments</h5>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <span>Admin Comments</span>
                                </div>
                                <div class="card-body">
                                    <% if(!ticket.admincomment) { %>
                                        <p>No comments from Admin.</p>
                                        <%}%> 
                                    <%= ticket.admincomment %>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <span>IT Officer Comments</span>
                                </div>
                                <div class="card-body">
                                    <% if(!ticket.staffcomment) { %>
                                        <p>No comments from IT Officer.</p>
                                        <%}%> 
                                    <%= ticket.staffcomment %>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <span>User Comments</span>
                                </div>
                                <div class="card-body">
                                    <% if(!ticket.usercomment) { %>
                                        <p>No comments from User.</p>
                                        <%}%> 
                                    <%= ticket.usercomment %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <% if(ticket.status != "CLOSED") { %>
                        <div class="card-header">Staff Comment</div>
                        <div class="form">
                            <form action="/staff/ticket/<%= ticket._id %>" method="post">
                                <input type="hidden" name="ticketid" value="<%=ticket._id%>">
                                <div class="form-group">
                                    <textarea name="staffcomment" cols="68" rows="4" placeholder="Enter comments"></textarea>
                                </div>
                                <div class="form-group">
                                    <select class="form-control" name="status" required>
                                    <option value=""disabled selected>Change Ticket Status</option>
                                        <option value="OPEN">OPEN</option>
                                        <option value="IN PROGRESS">IN PROGRESS</option>
                                        <option value="CLOSED">CLOSED</option>
                                </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-primary">Update Ticket</button>
                                </div>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

<%- include('partials/dashFooter') %>